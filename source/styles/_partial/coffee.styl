.coffee-mask
  position fixed
  background-color rgba(255, 255, 255, 0.48)
  top 0
  right 0
  bottom 0
  left 0
  height 100%
  z-index 1000

  display none

  &.open
    display block

.coffee-wrap
  display flex
  flex-direction column
  justify-content center
  align-items center
  width 38rem
  margin 10rem auto
  padding gutter-size * 2 0
  box-sizing border-box
  background-color color-article-background
  border 1px solid lighten(color-grey, 50%)
  border-radius 6px
  box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.07)

  @media mq-mobile
    width auto
    margin 10rem 1rem

.getcoffee
  text-align center
  
  span 
    width 50%
    box-sizing border-box;
    display inline-block
    padding 0 2rem

  img
    max-width 100%
